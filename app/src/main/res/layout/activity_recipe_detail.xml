<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeDetailActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recipeDetail_titleText"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#84BA71"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:paddingVertical="5dp"
                android:textAlignment="center"
                android:text="레시피"/>

            <ImageView
                android:id="@+id/recipeDetail_recipeImg"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#25000000"
                />

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp">

                <RelativeLayout
                    android:id="@+id/recipeDetail_evaluationBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true">
                    <ImageView
                        android:id="@+id/recipeDetail_evaluationImg"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_thumb_up"/>

                    <TextView
                        android:id="@+id/recipeDetail_evaluation"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@id/recipeDetail_evaluationImg"
                        android:text="5.0"
                        android:textSize="30sp" />

                </RelativeLayout>


                <ImageView
                    android:id="@+id/recipeDetail_favoriteImg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:tag="off"
                    android:src="@drawable/ic_star_empty" />
            </RelativeLayout>
            <TextView
                android:id="@+id/recipeDetail_description"
                android:layout_marginHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text=""/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:id="@+id/recipeDetail_recipeTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:text="10분"
                    android:textAlignment="center"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/recipeDetail_difficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:text="쉬워요"
                    android:textAlignment="center"
                    android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:text="재료"
                android:textSize="30sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                />
            <LinearLayout
                android:id="@+id/recipeDetail_ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="4"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp">


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:text="조리순서"
                android:textSize="30sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                />
            <LinearLayout
                android:id="@+id/recipeDetail_procedures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp">
            </LinearLayout>
            <Button
                android:id="@+id/recipeDetail_execute"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingVertical="5dp"
                android:background="#84BA71"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:text="조리하기"
                android:textSize="35sp"/>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/recipeDetail_evaluationModal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="invisible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:background="#FFFFFF">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginVertical="10dp"
                android:text="평가하기"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="30sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="5">
                <ImageView
                    android:id="@+id/recipeDetail_evaluationStar_1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_star_empty"/>
                <ImageView
                    android:id="@+id/recipeDetail_evaluationStar_2"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_star_empty"/>
                <ImageView
                    android:id="@+id/recipeDetail_evaluationStar_3"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_star_empty"/>
                <ImageView
                    android:id="@+id/recipeDetail_evaluationStar_4"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_star_empty"/>
                <ImageView
                    android:id="@+id/recipeDetail_evaluationStar_5"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_star_empty"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">
                <Button
                    android:id="@+id/recipeDetail_evaluationModal_btn"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:background="#84BA71"
                    android:text="확인"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</FrameLayout>

