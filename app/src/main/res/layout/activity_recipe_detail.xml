<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeDetailActivity"
    android:gravity="center"
    android:orientation="vertical">
    <Button
        android:id="@+id/recipeDetail_testCamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="카메라"
        />
    <Button
        android:id="@+id/recipeDetail_testBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="테스트"
        />

    <ImageView
        android:id="@+id/recipeDetail_testImg"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/recipeDetail_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:id="@+id/recipeDetail_testImg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/recipeDetail_test2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>